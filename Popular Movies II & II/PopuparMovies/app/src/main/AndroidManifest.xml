<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alifyz.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MoviesHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MoviesDetailsActivity"
            android:parentActivityName=".MoviesHomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MoviesHomeActivity" />
        </activity>

        <provider
            android:name=".Database.MoviesContentProvider"
            android:authorities="com.alifyz.popularmovies"
            android:exported="false" />

        <activity android:name=".MoviesFavoritesDetailsActivity"
                  android:parentActivityName=".MoviesFavoritesHomeActivity"  />
        <activity android:name=".MoviesFavoritesHomeActivity"
                  android:parentActivityName=".MoviesHomeActivity">
        </activity>
    </application>

</manifest>